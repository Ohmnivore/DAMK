{
    "name": "Dank ASCII Meme Klipboard (DAMK)",
    "description": "Allows you to save your dank ASCII memes for instant pasting. What a time to be alive!",
    "version": "0.4",
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": ["context.js"]
    },
    "browser_action": {
        "default_title": "DAMK",
        "default_icon": {
            "19": "icons/damk16.png",
            "38": "icons/damk38.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "assets/*"
    ],
    "icons": {
        "16": "icons/damk16.png",
        "48": "icons/damk48.png",
        "128": "icons/damk128.png"
    },
    "manifest_version": 2
}
